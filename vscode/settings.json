{
  // Editor configurations
  "breadcrumbs.enabled": true,
  "editor.snippetSuggestions": "bottom",
  "editor.multiCursorModifier": "ctrlCmd",
  "explorer.compactFolders": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code Retina",
  "editor.fontWeight": "normal",
  "editor.tabSize": 4,
  "editor.cursorWidth": 1,
  "editor.detectIndentation": false,
  "editor.minimap.enabled": false,
  "editor.minimap.size": "fill",
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.maxColumn": 80,
  "editor.lineHeight": 0,
  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.codeLens": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.mouseWheelZoom": false,
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "editor.bracketPairColorization.enabled": true,
  "editor.copyWithSyntaxHighlighting": false,

  // Terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono",
  "terminal.integrated.defaultProfile.osx": "pwsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "pwsh",

  // Window / Workbench
  "workbench.panel.defaultLocation": "right",
  "window.commandCenter": true,

  // Telemetry
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "explorer.openEditors.visible": 0,
  "files.autoSave": "off",
  "workbench.startupEditor": "newUntitledFile",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.titleBarStyle": "custom",
  "window.nativeTabs": true,

  // Extensions
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "prettier.semi": true,
  "eslint.validate": ["vue", "angular", "typescript", "javascript"],
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "vetur.format.enable": true,
  "gitlens.codeLens.enabled": false,
  "emmet.showAbbreviationSuggestions": false,
  "markdown.preview.fontSize": 14,
  "diffEditor.ignoreTrimWhitespace": false,
  "yaml.schemaStore.enable": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.block"],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "keyword.operator.logical",
          "keyword.operator.arithmetic",
          "keyword.operator.assignment",
          "keyword.operator.bitwise"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFolding.enable": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.pester.outputVerbosity": "Diagnostic",
  "powershell.pester.useLegacyCodeLens": false,
  "[powershell]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-vscode.powershell",
    "editor.semanticHighlighting.enabled": true,
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?$"
  },

  // Language specific settings
  "python.analysis.typeCheckingMode": "strict",
  "[javascript]": {
    "editor.tabSize": 2,
    // "editor.defaultFormatter": "HookyQR.beautify",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "HookyQR.beautify",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "HookyQR.beautify",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "HookyQR.beautify",
    "editor.formatOnSave": true
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur",
    "editor.formatOnSave": true
  },
  "[terraform]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.semanticHighlighting.enabled": true
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "workbench.editor.untitled.hint": "hidden",
  "terminal.integrated.cursorStyle": "line",
  "workbench.iconTheme": "atom-icons",
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "explorer.confirmDragAndDrop": false,
  "go.toolsManagement.autoUpdate": true,
  "files.associations": {
    "**/*infra-deploy.yaml": "azure-pipelines"
  },
  "git.terminalAuthentication": false,
  "github.gitAuthentication": false,
  "azureResourceManagerTools.parameterFiles": {
    "/Users/mm/code/github.com/ncopmgmt/siem-light/logic_apps/eventhub_connection.json": "eventhub_connection.parameters.json"
  },
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.whitespaceBetweenParameters": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": false
}
